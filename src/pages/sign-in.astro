---
import Layout from '@/layouts/Layout.astro';
import {
  Card,
  CardHeader,
  CardTitle,
  CardDescription,
  CardContent,
  CardFooter,
} from '@/components/ui/card';
import { Logo } from '@/components/logo';
import { SignInForm } from '@/components/sign-in-form';
---

<Layout title="GriffinHealth | Sign in">
  <main
    class="flex min-h-screen flex-col items-center justify-center bg-persian-green-50/50 px-4 dark:bg-persian-green-800/20"
  >
    <div class="relative w-full max-w-[400px] space-y-6">
      <a href="/">
        <Logo client:load />
      </a>

      <Card
        className="border-persian-green-100 bg-background/95 backdrop-blur-sm dark:border-persian-green-900/50 dark:bg-background/95"
      >
        <CardHeader>
          <CardTitle>Sign in to your account</CardTitle>
          <CardDescription>
            Choose your role to access the appropriate dashboard
          </CardDescription>
        </CardHeader>
        <SignInForm client:load />
      </Card>

      <div
        class="absolute -right-24 -top-24 h-48 w-48 rounded-full bg-persian-green-200/50 blur-3xl dark:bg-persian-green-900/20"
      >
      </div>
      <div
        class="absolute -bottom-12 -left-12 h-32 w-32 rounded-full bg-persian-green-200/50 blur-3xl dark:bg-persian-green-900/20"
      >
      </div>
    </div>
  </main>
</Layout>
