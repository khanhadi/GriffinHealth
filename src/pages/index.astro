---
import Layout from '../layouts/Layout.astro';
import { Shield } from 'lucide-react';
---

<Layout title="GriffinHealth | Intelligent Health Monitoring">
	<main class="min-h-screen">
		<!-- Navigation -->
		<nav class="border-b bg-white/80 backdrop-blur-sm fixed w-full top-0 z-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center h-16">
					<a href="/" class="flex items-center gap-2">
						<Shield className="h-8 w-8 text-amber-600" />
						<span class="text-xl font-bold text-slate-900">GriffinHealth</span>
					</a>
					<div class="flex items-center gap-4">
						<a
							href="/dashboard"
							class="text-sm font-medium text-slate-700 hover:text-amber-600 transition-colors"
						>
							Dashboard
						</a>
						<a
							href="/login"
							class="text-sm font-medium text-white bg-amber-600 px-4 py-2 rounded-lg hover:bg-amber-700 transition-colors"
						>
							Sign In
						</a>
					</div>
				</div>
			</div>
		</nav>

		<!-- Hero Section -->
		<section class="pt-24 pb-16 px-4 sm:px-6 lg:px-8">
			<div class="max-w-7xl mx-auto">
				<div class="text-center">
					<h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-6xl">
						Your Personal Health Guardian
					</h1>
					<p class="mt-6 text-lg leading-8 text-slate-600 max-w-2xl mx-auto">
						Intelligent health monitoring powered by AI. Track your vitals, manage appointments, and
						receive personalized insights for better healthcare management.
					</p>
					<a
						class="mt-10 flex items-center justify-center gap-x-6"
						href="/dashboard"
						class="rounded-lg bg-amber-600 px-4 py-2.5 text-sm font-semibold
						text-white hover:bg-amber-700 transition-colors"
					>
						View Dashboard
					</a>
					<a
						href="#features"
						class="text-sm font-semibold leading-6 text-slate-900 hover:text-amber-600 transition-colors"
					>
						Learn more <span aria-hidden="true">â†’</span>
					</a>
				</div>
			</div>
		</section>
	</main>
</Layout>

