---
import Layout from '../layouts/Layout.astro';
import { BirdIcon } from 'lucide-react';
import '@/styles/globals.css';
---

<Layout title="GriffinHealth | Intelligent Health Monitoring">
  <main class="min-h-screen">
    <!-- Navigation -->
    <nav class="fixed top-0 z-50 w-full border-b bg-white/80 backdrop-blur-sm">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
          <a href="/" class="flex items-center gap-2">
            <BirdIcon className="h-8 w-8 text-amber-600" />
            <span class="text-xl font-bold text-slate-900">GriffinHealth</span>
          </a>
          <div class="flex items-center gap-4">
            <a
              href="/dashboard"
              class="text-sm font-medium text-slate-700 transition-colors hover:text-amber-600"
            >
              Dashboard
            </a>
            <a
              href="/login"
              class="rounded-lg bg-amber-600 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-amber-700"
            >
              Sign In
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->

    <section class="px-4 pb-16 pt-24 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="text-center">
          <h1
            class="text-4xl font-bold tracking-tight text-slate-900 sm:text-6xl"
          >
            Your Personal Health Guardian
          </h1>
          <p class="mx-auto mt-6 max-w-2xl text-lg leading-8 text-slate-600">
            Intelligent health monitoring powered by AI. Track your vitals,
            manage appointments, and receive personalized insights for better
            healthcare management.
          </p>
          <a
            class="mt-10 flex items-center justify-center gap-x-6"
            href="/dashboard"
            class="rounded-lg bg-amber-600 px-4 py-2.5 text-sm font-semibold text-white transition-colors hover:bg-amber-700"
          >
            View Dashboard
          </a>
          <a
            href="#features"
            class="text-sm font-semibold leading-6 text-slate-900 transition-colors hover:text-amber-600"
          >
            Learn more <span aria-hidden="true">â†’</span>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

