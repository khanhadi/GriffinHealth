---
import Layout from '@/layouts/Layout.astro';
import { Bird } from 'lucide-react';
import { Button } from '@/components/ui/button';
---

<Layout title="GriffinHealth | Intelligent Health Monitoring">
  <main class="min-h-screen">
    <!-- Navigation -->
    <nav
      class="fixed top-0 z-50 w-full border-b bg-background/80 backdrop-blur-sm"
    >
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
          <a href="/" class="flex items-center gap-2">
            <Bird className="h-8 w-8 text-primary" />
            <span class="text-xl font-bold text-foreground">GriffinHealth</span>
          </a>
          <div class="flex items-center gap-4">
            <a href="/dashboard">
              <Button variant="ghost">Dashboard</Button>
            </a>
            <a href="/login">
              <Button>Sign In</Button>
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="px-4 pb-16 pt-24 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-7xl">
        <div class="text-center">
          <h1
            class="text-4xl font-bold tracking-tight text-foreground sm:text-6xl"
          >
            Your Personal Health Guardian
          </h1>
          <p
            class="mx-auto mt-6 max-w-2xl text-lg leading-8 text-muted-foreground"
          >
            Intelligent health monitoring powered by AI. Track your vitals,
            manage appointments, and receive personalized insights for better
            healthcare management.
          </p>
          <div class="mt-10 flex items-center justify-center gap-x-6">
            <a href="/dashboard">
              <Button client:load size="lg" className="px-8"
                >View Dashboard</Button
              >
            </a>
            <a href="#features">
              <Button client:load variant="link" className="text-foreground">
                Learn more <span aria-hidden="true" class="ml-2">â†’</span>
              </Button>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
